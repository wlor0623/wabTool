<script>
    var all = new Vue({
        el: "#app",
        data: {
            options: [{
                value: "1",
                label: "1格"
            }, {
                value: "2",
                label: "2格"
            }, {
                value: "3",
                label: "3格"
            }, {
                value: "4",
                label: "4格"
            }, {
                value: "6",
                label: "6格"
            }, {
                value: "7",
                label: "7格"
            }, {
                value: "8",
                label: "8格"
            }, {
                value: "9",
                label: "9格"
            }, {
                value: "10",
                label: "10格"
            }, {
                value: "11",
                label: "11格"
            }, {
                value: "12",
                label: "12格"
            }],
            phoneValue: "",
            padValue: "",
            smallValue: "",
            bigValue: "",
            classStr: ""
        },
        created: function () {
            var that = this;
        },
        methods: {
            getClass: function () {
                var that = this;
                var classStr =
                    `col-xs-${that.phoneValue} col-sm-${that.padValue} col-md-${that.smallValue}  col-lg-${that.bigValue}`;
                that.classStr = classStr;
                console.log(classStr)
            }
        },
    });
</script>

