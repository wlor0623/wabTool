<script src="https://cdn.bootcss.com/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdn.bootcss.com/jquery-validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="https://cdn.bootcss.com/clipboard.js/1.6.1/clipboard.min.js"></script>
<script>
    $(function () {
        $("#rulesForm").validate({
            rules: {
                phone: {
                    required: true,
                    minlength: 1,
                    maxlength: 2,
                },
                pad: {
                    required: true,
                    minlength: 1,
                    maxlength: 2,
                },
                smallPc: {
                    required: true,
                    minlength: 1,
                    maxlength: 2,
                },
                bigPC: {
                    required: true,
                    minlength: 1,
                    maxlength: 2,
                },
            },
            messages: {
                phone: {
                    required: "请输入格数",
                    min: "请输入1-12有效数字",
                    max: "请输入1-12有效数字",
                    minlength: "请输入1-12有效数字",
                    maxlength: "请输入1-12有效数字",
                },
                pad: {
                    required: "请输入格数",
                    min: "请输入1-12有效数字",
                    max: "请输入1-12有效数字",
                    minlength: "请输入1-12有效数字",
                    maxlength: "请输入1-12有效数字",
                },
                smallPc: {
                    required: "请输入格数",
                    min: "请输入1-12有效数字",
                    max: "请输入1-12有效数字",
                    minlength: "请输入1-12有效数字",
                    maxlength: "请输入1-12有效数字",
                },
                bigPC: {
                    required: "请输入格数",
                    min: "请输入1-12有效数字",
                    max: "请输入1-12有效数字",
                    minlength: "请输入1-12有效数字",
                    maxlength: "请输入1-12有效数字",
                },
            },
            submitHandler: function (form) {
                var phone = 12 / $('#phone').val();
                var pad = 12 / $('#pad').val();
                var smallPc = 12 / $('#smallPc').val();
                var bigPC = 12 / $('#bigPC').val();
                var classStr = "";
                classStr += `col-xs-${phone}`;
                classStr += `col-sm-${pad}`;
                classStr += `col-md-${smallPc}`;
                classStr += `col-lg-${bigPC}`;
                $('#getCode').attr("data-clipboard-text", classStr);
                var divStr = "";
                for (var i = 0; i < 12; i++) {
                    divStr += `<div class="${classStr}"><span>${i+1}<span></div>`
                }
                $('#demo').html(divStr);
                var clipboard = new Clipboard('#getCode');
                clipboard.on('success', function (e) {
                    showTips()
                });
                clipboard.on('error', function (e) {})
            },
        })
    });

    function showTips() {
        $('#getCode').popover('show')
    }
</script>
</html>
